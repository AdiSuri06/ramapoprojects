extends layout.pug

block content
  head
    title Create Contact
    link(href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css", rel="stylesheet")
  body
    .container
      h2 Create Contact
      form(action="/create", method="post" class = "card bg-light")
        fieldset(class="border p-2")
          legend( class="w-auto px-2") Basic Info
          .form-group(class="col-md-6")
            label(for="firstname") First Name:
            input(class="form-control" type="text", id="firstname", name="firstname")
          .form-group(class="col-md-6")
            label(for="lastname") Last Name:
            input(class="form-control" type="text", id="lastname", name="lastname")
          .form-group(class="col-md-6")
            label(for="phonenumber") Phone:
            input(class="form-control" type="tel", id="phonenumber", name="phonenumber")
          .form-group(class="col-md-6")
            label(for="emailaddress") Email:
            input(class="form-control" type="email", id="emailaddress", name="emailaddress")
        fieldset(class="border p-2")
          legend( class="w-auto px-2") Address
          .form-group(class="col-md-6")
            label(for="street") Street:
            input(class="form-control" type="text", id="street", name="street")
          .form-group(class="col-md-6")
            label(for="city") City:
            input( class="form-control" type="text", id="city", name="city")
          .form-group(class="col-md-6")
            label(for="state") State:
            input(class="form-control"  type="text", id="state", name="state")
          .form-group(class="col-md-6")
            label(for="zip") Zip:
            input( class="form-control" type="text", id="zip", name="zip")
          .form-group(class="col-md-6")
            label(for="country") Country:
            input( class="form-control" type="text", id="country", name="country")
        fieldset(class="border p-2")
          legend( class="w-auto px-2")  Contact Preferences
          .form-check
            input.form-check-input(type="checkbox", id="contact_by_phone", name="contact_by_phone")
            label.form-check-label(for="contact_by_phone") Contact by phone
          .form-check
            input.form-check-input(type="checkbox", id="contact_by_email", name="contact_by_email")
            label.form-check-label(for="contact_by_email") Contact by email
        p 
          button(class="btn btn-primary" type="submit" ) &nbsp;Add&nbsp;   
          a(href='/' class="btn btn-secondary"  style='margin-left:10px') Cancel